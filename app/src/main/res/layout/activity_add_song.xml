<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ACTIVITY.addSongActivity">

    <TextView
        android:id="@+id/display_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="INFORMACION"
        android:textColor="@color/blackColor"
        android:textSize="30sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_text"
        android:layout_marginTop="2dp"
        android:padding="16dp">

        <EditText
            android:id="@+id/nameBuscador"
            android:layout_width="226dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:background="@drawable/backgraund"
            android:hint="Enter Your Name Music"
            android:inputType="textPersonName|textCapWords"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/backgraund"
            android:src="@drawable/ic_search_black_24dp"
            android:text="buscar"
            android:textColor="@color/blackColor"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/objetoImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:src="@drawable/ic_lmusic" />

    <EditText
        android:id="@+id/cancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/objetoImage"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgraund"
        android:hint="Cancion"
        android:inputType="textPersonName|textCapWords"
        android:padding="10dp" />

    <EditText
        android:id="@+id/autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancion"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgraund"
        android:hint="Autor"
        android:inputType="textPersonName|textCapWords"
        android:padding="10dp" />


    <Button
        android:id="@+id/addButtonObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgraund"
        android:text="Agregar"
        android:onClick="EnvioDatos"
        android:textColor="@color/blackColor"
        android:textStyle="bold" />
</RelativeLayout>